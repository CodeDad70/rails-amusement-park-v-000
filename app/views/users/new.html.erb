<%= form_for @user do |f| %>

<div class="field">
	<label for="name">Name</label>
	<br>
<%= f.text_field :name%><br>
</div>

<div class="field">
	<label for="height">Height (in inches)</label>
	<br>
<%= f.number_field :height%><br>
</div>

<div class="field">
	<label for="happiness">How happy are you? (1-5 scale)</label>
	<br>
<%= f.number_field :happiness, in:1..5%><br>
</div>

<div class="field">
	<label for="nausea">How nauseous are you? (1-5 scale)</label>
	<br>
<%= f.number_field :nausea, in:1..5%><br>
</div>

<div class="field">
	<label for="tickets">How many dollars are in your pocket?</label>
	<br>
<%= f.number_field :tickets%><br>
</div>

<div>
	<label for= "admin" class= "user_admin">ADMIN</label>
<%= f.check_box :admin%><br>
</div>

<div class="field">
	<label for="password">Password</label>
	<br>
<%= f.text_field :password%><br>
</div><br>

<%= f.submit "Create User"%>

<%end%>
